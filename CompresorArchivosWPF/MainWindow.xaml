<Window x:Class="CompresorArchivosWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompresorArchivosWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu>
            <MenuItem Header="_Archivo">
                <MenuItem x:Name="nuevoArchivoItem" Header="_Nuevo archivo comprimido" Click="NuevoArchivoComprimido_Click" />
                <MenuItem x:Name="listarRecientesItem" Header="_Listar comprimidos recientes" Click="ListarArchivosComprimidos_Click" />
            </MenuItem>
            <MenuItem Header="_Salir" Click="Salir_Click" />
        </Menu>
        <ListBox Background="Transparent" x:Name="listBox" Margin="10,30,10,10"></ListBox>
    </Grid>
</Window>
